<link rel="stylesheet" href="/stylesheets/edit-profile.css">
<!-- Font Awesome -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
  rel="stylesheet"
/>
<!-- Google Fonts -->
<link
  href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
  rel="stylesheet"
/>
<!-- MDB -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
  rel="stylesheet"
/>

<body class="bg-ligth" >
     <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 mt-5 pt-5">
                <div class="row shadow   bg-body rounded">
                    <div class="col-sm-4 bg-dark rounded-left">
                        <div class="card-block text-center text-white">
                           <i class="fas fa-user fa-7x mt-5"></i>

                               <form class="UF" action="/edit-profile" method="post">
                              
                            <input type="text" class="form-control " style="border: none; background:transparent;text-align:center;color:aliceblue;height:35px;" placeholder="name" value="{{user.name}}" name="name">
                            
                          <button type="submit" style="background:transparent ; border:none;color:whitesmoke" ><i class="far fa-edit fa-2x mt-5" style="display: block;"></i></button>
                             
                           </form>
                          
                           
                        </div>
                    </div>
                    <div class="col-sm-8 bg-white rounded-right">
                        <h3 class="mt-3 text-center">Details</h3>
                        <hr class="badge-primary mt-0 w-25">
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weigth-blod">Email:</p>
                                <h6 class="text-muted">{{user.email}}</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weigth-blod">Phone NUmber:</p>
                                <h6 class="text-muted">{{user.phone}}</h6>
                            </div>
                        </div>
                         <div class="row mt-3">
                            <div class="col-sm-6">
                             {{#each user.address}}
                         
                            <p class="font-weigth-blod">Address:</p>
                           
                              
                             <h6 class="text-muted"> {{this.address}}</h6>
                        {{/each}}
                                
                               
        
                            </div>
                            <div class="col-sm-6">
                                <label for="">Edit address <a href="/Edit-address"><button class="btn btnadd">Edit address</button></a></label>
                            </div>

                         <div class="row mt-3">
                            <div class="col-sm-6">
                             
                                <label for="">Add address <button class="btn btnadd" onclick="showHide()">Add address</button></label>
        
         
                               
                            </div>
                            <div class="col-sm-6">
                               <label for="">Change Password  <button class="btn btnadd" onclick="showHide2()">Change Password</button></label>
       
                            </div>
                        </div>
                        <div class="col-md-5 forms"  style="
                         margin-left: 5rem;
                         display:none;
                          margin-bottom:5rem;">
                         <h4 class=" pl-3 mt-5">Add Address</h4>
                         <form  class="UFA" action="/add-address" method="post">
                           <div class="col-md-12"><label class="labels">Address</label><textarea type="text" class="form-control" placeholder="enter address" value="" name="address"></textarea></div>
                    
                              <div class="col-md-12"><label class="labels">City</label><input type="text" class="form-control" placeholder="enter city" value="" name="city"></div>
                              <div class="col-md-12"><label class="labels">Area</label><input type="text" class="form-control" placeholder="enter area" value="" name="area"></div>
                              <div class="col-md-12"><label class="labels">Postcode</label><input type="text" class="form-control" placeholder="enter post code" value="" name="pin"></div>
                              <div class="row mt-3">
                              <div class="col-md-6"><label class="labels">State/Region</label><input type="text" class="form-control" value="" placeholder="state" name="state"></div>
                              <div class="col-md-6"><label class="labels">Country</label><input type="text" class="form-control" placeholder="country" value="" name="country"></div>
                  
                               <button type="submit" style="margin-top: 2rem;" class="btn btnadd ml-3">Add Address</button>
                              </div>
                         </form>
                         </div>   

                         </div>
                        
                        
                 <div class="col-md-5 forms2"  style="display: none;">
                 <h4 class="t pl-3 mt-5">Change Password</h4>
                 
                <form class="SUF" name="SUF" action="/change-password" method="post">
       
        <div class="col-md-12"><label for="password" class="labels">Old Password</label>
        <input type="password" name="password" placeholder="Password..." id="old password" class="form-control"></div>
        <div class="col-md-12"><label for="confirmPassword" class="labels">New Password</label>
        <input type="password" name="newPassword" placeholder="new password..." class="form-control" id="password2"></div>
        <div class="col-md-12"><label for="newPassword" class="labels">Re-enter New Password</label>
        <input type="password" name="confirmPassword2" placeholder="new password..." class="form-control"></div>
        <br>
        <button type="submit" class="btn btnadd">Change Password</button>
   
    </form>
    </div>
    </div>

</body>
<style>
    .hid{
        display: show;
    }
    
</style>

<script>
    let divs = document.querySelector(".forms")
    let divs2= document.querySelector('.forms2')
    let ishow = true
    function showHide(){
        if(ishow){
           divs.style.display = 'block'
           ishow=false
        }else{
            divs.style.display="none"
            ishow=true
        }
       
    }
    function showHide2(){
        if(ishow){
           divs2.style.display = 'block'
           ishow=false
        }else{
            divs2.style.display="none"
            ishow=true
        }
       
    }
</script>
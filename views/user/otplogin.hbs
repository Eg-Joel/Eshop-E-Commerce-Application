<div class="container-fluid bg">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-6 col-md3 col-lg-3">
                <form class="form-container LIF"  name="LIF" action="/sendOTP" method="POST">
                    <div class="form-group">
                        <h3>Login </h3>
                     {{#if loginErr}}
                         <p style="color: red;">{{loginErr}}</p>
                     {{/if}}
                      <label for="phoneNo">Phone No</label>
                      <input type="tel" class="form-control" name="phone" id="phone" aria-describedby="phoneHelp" placeholder="0123456789" pattern="[0-9]{10}" required >
                   
                    </div>
                    
                  
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
               
                  </form>
            </div>
        </div>
       
        
    </div>
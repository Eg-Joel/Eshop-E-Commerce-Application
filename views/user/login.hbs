<div class="container-fluid bg">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-12 col-md-3 col-lg-3">
                <form class="form-container LIF" name="LIF" action="/login" method="POST">
                    <div class="form-group">
                      {{#if msg}}
                      <p style="color: red;">{{msg}}</p>
                     
                       {{/if}}

                     {{#if loginErr}}
                         <p style="color: red;">{{loginErr}}</p>
                         
                     {{/if}}
                      
                      <label for="exampleInputEmail1">Email</label>
                      <input type="Email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Email" required >
                    
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password" minlength="3" required pattern="\S(.*\S)?">
                     
                    </div>
                  
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                  <div>
                    <center><p>Or</p></center>
                   <center> <a href="/sendOTP"><input type="button" class="btnotp" name="" id="" value="OTP Login"></a> <br></center> 
            
              <p class="mb-0">Don't have an account? <a href="/signup" class="text-white-50 fw-bold">Sign Up</a>
              </p>
            </div>
                  </form>
            </div>
        </div>
       
        
    </div>
<link rel="stylesheet" href="/stylesheets/profile-style.css">

<div class="container">
    <div class="main">
        <div class="row">
            <div class="col-md4-4 mt1">
                
                <div class="card text-center sidebar">
                    <div class="card-body">
                        <img src="/images/profile.jpg" alt="" class="rounded-circle" width="150">
                        <div class="mt-3">
                            <h3>{{user.name}}</h3>
                            <a href="/">Home</a>
                            <a href="/orders">Orders</a>
                            <a href="/edit-profile">Edit Profile</a>
                        
                        </div>
                    </div>
                </div>
               
            </div>
            <div class="col-md-8 mt-1">
                <div class="card mb-3 content">
                    <h1 class="m-3 pt-3">About</h1>
                    <div class="card-body">
                        <div class="row cont">
                            <div class="col-md-3">
                                <h5>Full Name</h5>

                            </div>
                            <div class="col-md-9 text-secondary" >
                               <span> {{user.name}}</span>
                            </div>

                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-3">
                                <h5>Email</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                              <span>{{user.email}}</span>
                            </div>
                        </div>

                       <div class="row">
                            <div class="col-md-3">
                                <h5>Phone</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                <span>{{user.phone}}</span>
                            </div>
                        </div>
                              <div class="row">
                            <div class="col-md-3">
                                <h5>referal</h5>
                            </div>
                            <div class="col-md-8 text-secondary">
                                <span>{{user._id}}</span>
                            </div>
                        </div>
                          <div class="row">
                            <div class="col-md-3">
                                <h5>Wallet</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                <span>{{user.wallet}}</span>
                            </div>
                        </div>
                        {{#each user.address}}
                         <div class="row">
                            <div class="col-md-3">
                                <h5>Address</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                               {{this.address}}
                            </div>
                        </div>
                        {{/each}}
                         
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="bg" >
    <div class="container adwaith ">
        <div class="row form-container mt-5">
            <div class="col-md-6 col-lg-12 ">
                <h1 class="text-center">Edit Product</h1>
                <form action="/admin/edit-Product/{{product._id}}" method="post" id="submit-form"  enctype="multipart/form-data">

                    <label for="name">Product Name</label><br>
                    <input type="text" name="name" value="{{product.name}}" class="form-control" required ><br>

                    <label for="name">Category</label><br>
                    {{!-- <input type="text" name="category" class="form-control" value="{{product.category}}"><br> --}}

                  <select name="category">
            {{#each categories}}
            <option 
             >{{this.category}}</option>
           {{/each}}
          </select><br><br>

                    {{!-- <label for="name">Sub Category</label><br>
                    <input type="text" name="subcategory" class="form-control" value="{{product.subcategory}}"><br> --}}

                    <label for="name">Product Details</label><br>                    
                    {{!-- <input type="text" name="productdetails" value="{{product.productdetails}}" class="form-control" required ><br> --}}
                    
                    <textarea rows="4" cols="50" name="productdetails"  class="form-control"  required="required">{{product.productdetails}}</textarea>
                    <label for="name">Price</label><br>
                    <input type="number" value="{{product.price}}"  min="1" step="any" name="price" class="form-control" required="required"><br>

                    {{!-- <label for="name">offer</label
                    ><br>
                    <input type="number" value="{{product.offer}}"  min="1" max="99" step="any" name="offer" class="form-control" required="required"><br>
                     --}}
                    <label for="name">Image</label><br>
                    <img src="/productimages/{{product._id}}.jpg" alt="" style="width: 100px;height:auto;background:white" id="imgView" class="pt-3">
                    <input type="file" name="images" class="form-control" onchange="viewImage(event)"><br>

                    <img src="/productimages/{{product._id}}0.jpg" alt="" style="width: 100px;height:auto;background:white" id="imgView" class="pt-3">
                    <input type="file" name="image2" class="form-control" onchange="viewImage(event)"><br>

                    <img src="/productimages/{{product._id}}1.jpg" alt="" style="width: 100px;height:auto;background:white" id="imgView" class="pt-3">
                    <input type="file" name="image3" class="form-control" onchange="viewImage(event)"><br>
                     
                   

                    <button type="submit" class="btn btn-primary ">submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>